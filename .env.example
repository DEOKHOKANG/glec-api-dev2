# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=GLEC API Dev2
API_VERSION=v1

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis Configuration (for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_characters_long
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
HEAVY_OPERATION_LIMIT=10     # per minute

# Security & Network Configuration
TRUST_PROXY_HOPS=1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
BLACKLISTED_IPS=
WHITELISTED_IPS=

# API Key Configuration
API_KEY_PREFIX=glec_
API_KEY_LENGTH=32

# External Services
MAPS_API_KEY=your_google_maps_api_key
CLIMATIQ_API_KEY=your_climatiq_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Postman Integration
POSTMAN_API_KEY=your_postman_api_key
POSTMAN_COLLECTION_ID=your_collection_id
POSTMAN_WORKSPACE_ID=your_workspace_id

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_API_KEY=your_analytics_api_key

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_INPUT_SANITIZATION=true
ENABLE_IP_FILTERING=false
ENABLE_DETAILED_LOGGING=true

# Development Tools
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_MODE=false